<% @memos.each do |memo| %>
  <% if ( ":"+ "#{memo[0]}") == @id %>
    <h2>タイトル</h2>
    <p class="display_title"><%= memo[1] %></p>
    <h3>内容</h3>
    <p class="display_content"><%= memo[2] %></p>
  <% end %>
<% end %>

<a href='/memos/<%= @id %>/edit'><button class="warp_change_button">変更</button></a>

<form action='/memos/<%= @id %>' method="post">
<input type='hidden' name="_method" value="delete">
<input class="delete_button" type='submit' value='削除'>
</form>
